<%- include('partials/header') -%>
<main>
  <div class="px-4 my-4 text-center">
    <div 
    class = "back-img"
    style = "background-image: url('/img/stones.jpg');" 
    >
      <h1 class="display-4 fw-bold" > Check In </h1>
        <div class="col-lg-6 mx-auto">
          <p class="lead mb-4">
            <strong>Hello</strong>: <%= user.userName %>
          </p>
        </div>
      <div class="col-lg-6 mx-auto" >
        <p class="lead mb-4">
          <strong>Sobriety Date</strong>: <%= soberSince %><br>
          <strong>Days</strong>: <%= user.daysSober %>
        </p>
      </div>
      <div class="d-grid gap-3 d-sm-flex justify-content-sm-center mb-5">  
          <!-- Button trigger modal -->
          <div>
            <button type="button" class="btn btn-dark reset" data-bs-toggle="modal" data-bs-target="#checkReset">Reset
            </button>
          </div>
        <!-- Modal --> 
        <div class="modal fade" tabindex="-1" role="dialog" id="checkReset">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content rounded-3 shadow">
              <div class="modal-body p-4 text-center">
                <form  
                action="/profile/resetDays/<%= user.daysSober._id %>?_method=PUT"
                method="POST"
              >
                <h5 class="mb-0">Are you sure you want to reset?</h5>
              </div>
              <div class="modal-footer flex-nowrap p-0">
                <button type="submit" class="btn btn-lg btn-link fs-6 text-decoration-none col-6 m-0 rounded-0 border-end" value="reset"><strong>Yes, reset</strong></button>
                <button type="button" class="btn btn-lg btn-link fs-6 text-decoration-none col-6 m-0 rounded-0" data-bs-dismiss="modal">Cancel</button>
              </div>
            </div>
          </div>
        </div>
        </form>
        <form 
          action="/profile/updateDays/<%= user.daysSober._id %>?_method=PUT"
          method="POST"
        >
          <button type="submit" class="btn btn-dark" value="add">New Day</button>
        </form>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <div class="card">
            <div class="card-body">
              <p class="card-text">“The man who moves a mountain begins by carrying away small stones.” – Confucius.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<%- include('partials/footer') -%>
