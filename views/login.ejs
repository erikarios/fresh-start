      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <header class="container">
      <div 
      class = "back-img"
      style = "background-image: url('/img/stones.jpg');"
      >
      <div class="d-flex justify-content-center">
        <h1 class="first">Everyday is a Fresh Start</h1>
      </div>
      <main class="container">
        <div class="row justify-content-center">
            <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el => { %>
                    <div class="alert alert-danger"><%= el.msg %></div>
                <% }) %>    
            <% } %>
            <% if (locals.messages.info) { %>
                <% messages.info.forEach( el => { %>
                    <div class="alert alert-info"><%= el.msg %></div>
                <% }) %>    
            <% } %>
            <div class="row g-2 login">
              <form action="/login" method="POST">
                <div class="col-md-6 form-floating mb-3 mx-auto">
                  <input type="email" class="form-control rounded-3" id="inputEmail" placeholder="Email" name="email">
                  <label for="inputEmail4">Email</label>
                </div>
                <div class="col-md-6 form-floating mb-3 mx-auto">
                  <input type="password" class="form-control rounded-3" id="password" placeholder="Password" name="password">
                  <label for="inputPassword4">Password</label>
                </div>
                <div class="d-grid gap-2 col-6 mx-auto">
                  <button type="submit" class="btn btn-dark w- mb-2 btn-lg rounded-3">Log In</button>
                </div>     
              </form>
            </div>
